# EditorConfig for rte_ckeditor_image
# Auto-generated by agent - Last updated: 2025-10-15
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php}]
indent_style = space
indent_size = 4

[*.{js}]
indent_style = space
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.{json}]
indent_style = space
indent_size = 2

[*.{md}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{xlf,xml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# TYPO3 Documentation - RST files per docs.typo3.org guidelines
[*.{rst,rst.txt}]
indent_style = space
indent_size = 4
max_line_length = 80
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
